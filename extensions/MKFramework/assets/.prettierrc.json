{
	"printWidth": 150,
	"tabWidth": 4,
	"useTabs": true,
	"semi": true,
	"singleQuote": false,
	"proseWrap": "preserve",
	"arrowParens": "always",
	"bracketSpacing": true,
	"endOfLine": "lf",
	"htmlWhitespaceSensitivity": "ignore",
	"trailingComma": "es5",
	"parser": "typescript",
	"overrides": [
    	{
			"files": "*.ts",
			"options": {
				"useTabs": false,
				"tabWidth": 4,
				"printWidth": 80,
				"semi": true,
				"singleQuote": true,
				"bracketSpacing": true,
				"arrowParens": "always",
				"trailingComma": "all"
			}
		}
	]
}
